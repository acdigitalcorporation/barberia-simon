---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import WhatsAppButton from '../../components/WhatsAppButton.astro'; // Ruta corregida
import BookingSection from '../../components/BookingSection.astro';
import HeroSection from '../../components/HeroSection.astro';
import ServicesSection from '../../components/ServicesSection.astro';
import TestimonialsSection from '../../components/TestimonialsSection.astro';
import GallerySection from '../../components/GallerySection.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <HeroSection />
      <ServicesSection />
      <TestimonialsSection />
      <GallerySection />
      <BookingSection />
    </main>
    <Footer />
    <WhatsAppButton />
  </body>
</html>
