const today = new Date();
---

<footer>
	<p>&copy; <span>{today.getFullYear()}</span> Barbería Simón. Todos los derechos reservados.</p>
	<p>Cuida tu estilo con nosotros. Visítanos en nuestro local o contáctanos por redes sociales.</p>
	<div class="social-links">
	  <a href="" target="_blank" aria-label="Síguenos en Facebook">
		<i class="fa-brands fa-facebook-f"></i>
	  </a>
	  <a href="" target="_blank" aria-label="Síguenos en Instagram">
		<i class="fa-brands fa-instagram"></i>
	  </a>
	  <a href="https://wa.me/+584144061127" target="_blank" aria-label="Contáctanos por WhatsApp">
		<i class="fa-brands fa-whatsapp"></i>
	  </a>
	</div>
  </footer>
  
  <style>
	/* Footer */
	footer {
	  padding: 2rem 1rem;
	  background-color: white; /* Fondo blanco */
	  color: #0033A0; /* Azul */
	  text-align: center;
	  border-top: 2px solid #FF0000; /* Línea roja superior */
	}
  
	footer p {
	  margin: 0.5rem 0;
	  font-family: 'Poppins', sans-serif;
	  font-size: 1rem;
	}
  
	/* Social Links */
	.social-links {
	  display: flex;
	  justify-content: center;
	  gap: 1rem;
	  margin-top: 1rem;
	}
  
	.social-links a {
	  font-size: 1.5rem; /* Tamaño del ícono */
	  color: #0033A0; /* Azul */
	  transition: color 0.3s ease, transform 0.3s ease;
	}
  
	.social-links a:hover {
	  color: #FF0000; /* Rojo */
	  transform: scale(1.2); /* Efecto de escala */
	}
  </style>
  
  <!-- Font Awesome -->
  <head>
	<link
	  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
	  rel="stylesheet"
	/>
  </head>