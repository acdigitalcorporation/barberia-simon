---
import { SITE_TITLE } from '../consts';
---
<head>
	<!-- Google Fonts: Barbershop In Thailand -->
	<link href="https://fonts.googleapis.com/css2?family=Barbershop+In+Thailand&display=swap" rel="stylesheet">
  
	<!-- Font Awesome CDN -->
	<link
	  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
	  rel="stylesheet"
	/>
  </head>
  
  <header>
	<nav>
	  <h2>
		<a href="#inicio" class="site-title">
		  <i class="fa-solid fa-scissors"></i> Barbería Simón
		</a>
	  </h2>
	  <div class="internal-links">
		<a href="#inicio">
		  <i class="fa-solid fa-house"></i> Inicio
		</a>
	  </div>
	</nav>
  </header>
  
  <style>
	/* Header */
	header {
	  margin: 0;
	  padding: 0 1em;
	  background: white; /* Fondo blanco */
	  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05); /* Sombra ligera */
	  border-bottom: 3px solid #FF0000; /* Borde rojo */
	}
  
	/* Título del sitio */
	h2 {
	  margin: 0;
	  font-size: 1.5em;
	}
  
	h2 a {
	  text-decoration: none;
	  font-family: 'Barbershop In Thailand', sans-serif; /* Fuente personalizada */
	  color: #0033A0; /* Azul */
	  display: flex;
	  align-items: center;
	  gap: 0.5rem;
	}
  
	h2 a:hover {
	  color: #FF0000; /* Rojo */
	}
  
	/* Navegación */
	nav {
	  display: flex;
	  align-items: center;
	  justify-content: space-between;
	  padding: 1em 0;
	}
  
	.internal-links {
	  display: flex;
	  gap: 1rem;
	}
  
	.internal-links a {
	  padding: 0.5em 1em;
	  font-family: 'Barbershop In Thailand', sans-serif; /* Fuente personalizada */
	  font-size: 1rem;
	  font-weight: bold;
	  color: #0033A0; /* Azul */
	  text-decoration: none;
	  display: flex;
	  align-items: center;
	  gap: 0.5rem;
	  border: 2px solid #0033A0; /* Borde azul */
	  border-radius: 5px;
	  transition: background-color 0.3s ease, color 0.3s ease;
	}
  
	.internal-links a:hover {
	  background-color: #FF0000; /* Fondo rojo */
	  color: white; /* Texto blanco */
	  border-color: #FF0000; /* Borde rojo */
	}
  
	/* Iconos */
	i {
	  font-size: 1.2rem;
	}
  
	/* Responsive para pantallas pequeñas */
	@media (max-width: 720px) {
	  h2 {
		font-size: 1.2em; /* Reducir tamaño del título */
	  }
  
	  .internal-links a {
		font-size: 0.9rem; /* Reducir tamaño de los enlaces */
		padding: 0.4em 0.8em; /* Ajustar padding */
	  }
	}
  </style>
  